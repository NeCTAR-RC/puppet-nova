[DEFAULT]
<% if @environment == "testing" -%>
verbose=True
<%- else -%>
verbose=False
<%- end -%>
auth_strategy=keystone
dhcpbridge_flagfile=/etc/nova/nova.conf
fixed_range=<%= nova_fixed_ip_range %>
network_manager=nova.network.manager.FlatDHCPManager
flat_network_dns=<%= nova_flat_network_dns %>
flat_network_dhcp_start=<%= nova_flat_network_dhcp_start %>
flat_network_bridge=<%= nova_network_bridge %>
flat_interface=<%= nova_flat_interface %>
libvirt_type=kvm
s3_host=<%= s3_host %>
s3_dmz=<%= s3_host %>
s3_port=8888
image_service=nova.image.glance.GlanceImageService
glance_api_servers=<%= glance_host %>:9292
ec2_dmz_host=<%= nova_cc_host_ip %>
ec2_host=<%= nova_cc_host %>
osapi_host=<%= nova_cc_host %>
sql_connection=mysql://<%= nova_db_user -%>:<%= nova_db_pass -%>@<%= nova_db_host -%>/nova
rabbit_host=<%= rabbitmq_host %>
rabbit_userid=<%= nova_rabbit_user %>
rabbit_password=<%= nova_rabbit_pass %>
rabbit_durable_queues=True
<% if nova_rabbitmq_ssl %>
rabbit_use_ssl=True
rabbit_port=5671
<% end %>
force_dhcp_release=True
connection_type=libvirt
use_syslog=true
syslog_log_facility=LOG_DAEMON
logdir=/var/log/nova
state_path=/var/lib/nova
lock_path=/var/lock/nova
root_helper=sudo /usr/bin/nova-rootwrap
bindir=/usr/bin
dnsmasq_config_file=/etc/nova/dnsmasq.conf
network_size=<%= nova_network_size %>
network_host=<%= ipaddress %>
routing_source_ip=<%= ipaddress %>
multi_host=True
memcached_servers=<%= nova_memcached_servers %>
allow_same_net_traffic=false
vncserver_listen=0.0.0.0
vncserver_proxyclient_address=<%= ipaddress %>
novncproxy_base_url=http://<%= nova_vnc_host %>:6080/vnc_auto.html
dhcp_domain=<%= nova_dhcp_domain %>
live_migration_flag=VIR_MIGRATE_UNDEFINE_SOURCE,VIR_MIGRATE_PEER2PEER,VIR_MIGRATE_LIVE
block_migration_flag=VIR_MIGRATE_UNDEFINE_SOURCE,VIR_MIGRATE_PEER2PEER,VIR_MIGRATE_NON_SHARED_INC,VIR_MIGRATE_LIVE
<% if nova_volume_type == 'nexenta' %>
# Nexenta Volume
volume_driver=nova.volume.nexenta.volume.NexentaDriver
nexenta_host=<%= nexenta_host %>
nexenta_volume=nova
nexenta_user=<%= nexenta_user %>
nexenta_password=<%= nexenta_pass %>
use_local_volume=False
<% end %>
